{
  "manifest_version": 3,
  "name": "Extrator de Transcrição da Udemy",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "*://*.udemy.com/*",
    "http://localhost:8080/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
